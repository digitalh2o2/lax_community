<div class="containter">
  <div class="col-md-4">
	<h1>Comments for <%= @event.name %></h1>

  <% @event.comments.each do |comment| %>
	<div>
		<p>Someone said: <%= link_to comment.content, comment_path(comment) %></p>
	</div>
  <% end %>
		<h4>Create new comment?</h4>
		<p><%= link_to "New Comment", new_event_comment_path(@event) %></p>

	<br>
	<p><%= link_to "Back", event_path(@event) %></p>
  </div>
</div>
